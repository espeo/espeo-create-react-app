{
  "name": "@espeo/create-espeo-app",
  "version": "1.0.1",
  "main": "src/main.tsx",
  "repository": "https://github.com/espeo/espeo-create-react-app",
  "author": "Espeo Software",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --config ./webpack.config.js --mode=development",
    "start:mocked": "concurrently --kill-others 'yarn mocked-server' 'webpack-dev-server --config ./webpack.config.js --mode=development'",
    "lint": "eslint --config ./.eslintrc.js 'src/**/*.{ts,tsx}'",
    "test": "jest src/**",
    "audit:ci": " if [[ $(yarn audit | grep Critical -B3 -A10) != '' ]]; then exit 1; fi",
    "build:dev": "webpack --config ./webpack.config.js --mode=development",
    "build:prod": "webpack --config ./webpack.config.js --optimize-minimize --mode=production",
    "build": "yarn clean && yarn build:prod",
    "analyze": "ANALYZE=true yarn build",
    "clean": "rm -rf dist",
    "mocked-server": "json-server --watch mocked-server/index.js --routes mocked-server/routes.json --port 4201 --watch --static ./dist",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:ci": "yarn mocked-server & (sleep 2 && yarn cy:run)"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/enzyme": "^3.9.4",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/redux-logger": "3.0.7",
    "@types/react-intl": "^2.3.17",
    "@types/react-redux": "^7.1.0",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-test-renderer": "^16.8.2",
    "@types/styled-components": "^4.1.16",
    "@types/uuid": "3.4.5",
    "@typescript-eslint/eslint-plugin": "2.3.2",
    "autoprefixer": "^9.6.0",
    "css-loader": "^3.0.0",
    "cypress": "^3.3.2",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^4.0.0",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "json-server": "^0.15.0",
    "mini-css-extract-plugin": "^0.7.0",
    "postcss-loader": "^3.0.0",
    "prettier": "1.18.2",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "concurrently": "4.1.2",
    "core-js": "^3.1.4",
    "dotenv": "8.2.0",
    "enzyme": "3.10.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-intl": "^2.8.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.1",
    "redux-logger": "3.0.6",
    "redux-saga": "1.1.1",
    "styled-components": "^4.3.2",
    "uuid": "3.3.3"
  },
  "engines": {
    "node": ">=10.9.0",
    "yarn": ">=1.17.0"
  }
}
